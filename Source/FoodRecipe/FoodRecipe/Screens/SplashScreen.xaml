
<Window x:Class="FoodRecipe.Screens.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodRecipe.Screens"
        mc:Ignorable="d"
        Title="SplashScreen" Height="430" Width="710" Loaded="Window_Loaded">
    <StackPanel Orientation="Horizontal">
        <StackPanel Width="295">
            <Label Content="Food Recipes" FontSize="40" FontWeight="Bold" Margin="20,80,20,0"/>

            <Label HorizontalAlignment="Left" Padding="30, 10, 55, 0" FontSize="14" Foreground="#757575">
                <AccessText TextWrapping="WrapWithOverflow">
                    Chào mừng bạn đến với một siêu phẩm phần mềm hiện đại - sách hướng dẫn nấu ăn online.
                </AccessText>
            </Label>

            <ProgressBar x:Name="splashProgress" Minimum="0" Maximum="5" Value="0" Margin="30, 100, 55, 0" Height="10"/>

            <CheckBox Checked="CheckBox_Checked" Margin="20,40,20,0">Không hiển thị cho lần sau</CheckBox>
        </StackPanel>
        <Image Source="../Images/splash0.png" Width="410" Height="375"/>
    </StackPanel>
</Window>